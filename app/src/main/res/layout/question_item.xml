<?xml version="1.0" encoding="utf-8"?>

<!-- layout to display each question -->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"

    android:layout_height="@dimen/listview_item_height"

    android:paddingStart="@dimen/layout_padding"

    android:paddingEnd="@dimen/layout_padding"

    >


    <!-- image for the right pointing arrow -->

    <ImageView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:contentDescription="@null"

        app:srcCompat="@drawable/ic_chevron_right_black_24dp"

        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"

        android:id="@+id/question_imageview_chevron_right"

        />

    <!-- text for the questions title -->

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        style="@style/TextAppearance.AppCompat.Title"

        android:layout_centerVertical="true"

        tools:text="How many chambers are there in the human heart?"

        android:id="@+id/question_textview_title"

        android:layout_toStartOf="@id/question_imageview_chevron_right"

        android:gravity="start"

        android:layout_marginEnd="@dimen/space_between_content_areas"

        />

</RelativeLayout>